<?xml version="1.0" ?>
<sdf version="1.7">
  <world name="better_robot_world">
    <!-- Better lighting -->
    <light type="directional" name="sun">
      <pose>0 0 10 0 0 0</pose>
      <diffuse>0.9 0.9 0.9 1</diffuse>
      <specular>0.3 0.3 0.3 1</specular>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <!-- Ground plane -->
    <model name="ground">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>20 20</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>20 20</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
            <diffuse>0.7 0.7 0.7 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Completely redefined robot with obvious wheels -->
    <model name="skid_steer_robot">
      <static>false</static>
      
      <!-- Main body - make it more robot-like -->
      <link name="body">
        <collision name="body_collision">
          <geometry>
            <box>
              <size>0.3 0.2 0.08</size>
            </box>
          </geometry>
        </collision>
        <visual name="body_visual">
          <geometry>
            <box>
              <size>0.3 0.2 0.08</size>
            </box>
          </geometry>
          <material>
            <ambient>0.9 0.1 0.1 1</ambient>
            <diffuse>0.9 0.1 0.1 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
          </material>
        </visual>
        <inertial>
          <mass>3.0</mass>
          <inertia>
            <ixx>0.02</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.02</iyy>
            <iyz>0</iyz>
            <izz>0.02</izz>
          </inertia>
        </inertial>
      </link>

      <!-- Front left wheel - MUCH larger and obvious -->
      <link name="front_left_wheel">
        <collision name="wheel_collision">
          <geometry>
            <cylinder>
              <radius>0.08</radius>
              <length>0.06</length>
            </cylinder>
          </geometry>
        </collision>
        <visual name="wheel_visual">
          <geometry>
            <cylinder>
              <radius>0.08</radius>
              <length>0.06</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.0 0.0 1.0 1</ambient>
            <diffuse>0.0 0.0 1.0 1</diffuse>
            <specular>0.3 0.3 0.3 1</specular>
          </material>
        </visual>
        <inertial>
          <mass>0.8</mass>
          <inertia>
            <ixx>0.003</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.003</iyy>
            <iyz>0</iyz>
            <izz>0.003</izz>
          </inertia>
        </inertial>
      </link>

      <!-- Front right wheel -->
      <link name="front_right_wheel">
        <collision name="wheel_collision">
          <geometry>
            <cylinder>
              <radius>0.08</radius>
              <length>0.06</length>
            </cylinder>
          </geometry>
        </collision>
        <visual name="wheel_visual">
          <geometry>
            <cylinder>
              <radius>0.08</radius>
              <length>0.06</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.0 0.0 1.0 1</ambient>
            <diffuse>0.0 0.0 1.0 1</diffuse>
            <specular>0.3 0.3 0.3 1</specular>
          </material>
        </visual>
        <inertial>
          <mass>0.8</mass>
          <inertia>
            <ixx>0.003</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.003</iyy>
            <iyz>0</iyz>
            <izz>0.003</izz>
          </inertia>
        </inertial>
      </link>

      <!-- Rear left wheel -->
      <link name="rear_left_wheel">
        <collision name="wheel_collision">
          <geometry>
            <cylinder>
              <radius>0.08</radius>
              <length>0.06</length>
            </cylinder>
          </geometry>
        </collision>
        <visual name="wheel_visual">
          <geometry>
            <cylinder>
              <radius>0.08</radius>
              <length>0.06</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.0 0.0 1.0 1</ambient>
            <diffuse>0.0 0.0 1.0 1</diffuse>
            <specular>0.3 0.3 0.3 1</specular>
          </material>
        </visual>
        <inertial>
          <mass>0.8</mass>
          <inertia>
            <ixx>0.003</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.003</iyy>
            <iyz>0</iyz>
            <izz>0.003</izz>
          </inertia>
        </inertial>
      </link>

      <!-- Rear right wheel -->
      <link name="rear_right_wheel">
        <collision name="wheel_collision">
          <geometry>
            <cylinder>
              <radius>0.08</radius>
              <length>0.06</length>
            </cylinder>
          </geometry>
        </collision>
        <visual name="wheel_visual">
          <geometry>
            <cylinder>
              <radius>0.08</radius>
              <length>0.06</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.0 0.0 1.0 1</ambient>
            <diffuse>0.0 0.0 1.0 1</diffuse>
            <specular>0.3 0.3 0.3 1</specular>
          </material>
        </visual>
        <inertial>
          <mass>0.8</mass>
          <inertia>
            <ixx>0.003</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.003</iyy>
            <iyz>0</iyz>
            <izz>0.003</izz>
          </inertia>
        </inertial>
      </link>

      <!-- Joints - position wheels clearly outside the body -->
      <joint name="front_left_wheel_joint" type="revolute">
        <parent>body</parent>
        <child>front_left_wheel</child>
        <axis>
          <xyz>0 0 1</xyz>
        </axis>
        <pose>0.12 0.14 0.04 0 0 0</pose>
      </joint>

      <joint name="front_right_wheel_joint" type="revolute">
        <parent>body</parent>
        <child>front_right_wheel</child>
        <axis>
          <xyz>0 0 1</xyz>
        </axis>
        <pose>0.12 -0.14 0.04 0 0 0</pose>
      </joint>

      <joint name="rear_left_wheel_joint" type="revolute">
        <parent>body</parent>
        <child>rear_left_wheel</child>
        <axis>
          <xyz>0 0 1</xyz>
        </axis>
        <pose>-0.12 0.14 0.04 0 0 0</pose>
      </joint>

      <joint name="rear_right_wheel_joint" type="revolute">
        <parent>body</parent>
        <child>rear_right_wheel</child>
        <axis>
          <xyz>0 0 1</xyz>
        </axis>
        <pose>-0.12 -0.14 0.04 0 0 0</pose>
      </joint>
    </model>

    <!-- Physics -->
    <physics type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1</real_time_factor>
      <real_time_update_rate>1000</real_time_update_rate>
      <gravity>0 0 -9.81</gravity>
    </physics>

  </world>
</sdf>
